<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.cuc.stephen.signincourse.BrowseStudents">

    <RelativeLayout
        android:layout_margin="16dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/tv_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_label"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/tv_number_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_number_label"
            android:layout_toRightOf="@id/tv_number_label"/>

        <TextView
            android:id="@+id/tv_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/name_label"
            android:layout_below="@id/tv_number_label"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignTop="@id/tv_name_label"
            android:layout_toRightOf="@id/tv_name_label"/>

        <TextView
            android:id="@+id/tv_major_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_label"
            android:text="@string/major_label"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_major_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_major_label"
            android:layout_toRightOf="@id/tv_major_label"/>

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/male"/>

        <TextView
            android:id="@+id/tv_status_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentBottom="true"
            android:text="1\n2\n3"/>

        <TextView
            android:id="@+id/tv_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/student_status"
            android:layout_above="@id/tv_status_value"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@id/tv_status_label"
            android:layout_alignParentRight="true"
            android:src="@drawable/camera"
            android:scaleType="fitXY"
            android:background="#00ffffff"
            android:onClick="openCamera"/>

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/tv_major_label"
            android:layout_above="@id/tv_status_label"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/female"/>

    </RelativeLayout>
 </FrameLayout>
